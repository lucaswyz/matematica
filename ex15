import math

raizA = 49 ** (1/2)
raizB = 8 ** (1/3)
raizC = 625 ** (1/4)
raizD = 1024 ** (1/10)
raizE = 81 ** (1/4)
raizF = 343 ** (1/3)

print("Exercício 15: ")

print(f"a) √49 = ²√7² = {raizA}")
print(f"a) ³√8 = ³√2³ = {raizB}")
print(f"a) √625 = ⁴√5⁴ = {raizC}")
print(f"a) ¹⁰√1024 = ¹⁰√2¹⁰ = {raizD}")
print(f"a) ⁴√81 = ⁴√3⁴ = {raizE}")
print(f"a) ³√343 = ³√7³ = {raizF}")
